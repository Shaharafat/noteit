{
  "name": "backend",
  "type": "module",
  "version": "1.0.0",
  "main": "./backend/server.js",
  "author": "Shah Arafat",
  "license": "MIT",
  "scripts": {
    "start": "node ./backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "yarn start --prefix frontend",
